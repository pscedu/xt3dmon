# $Id$

# modskels
# archive

vmode phys
setcap "CPU temperatures in physical machine layout"
dmode temp
opt frames,tween,nodeanim,caption,ground
panel legend,help
# pstick bl legend
bird
orbit -x

setcap "Changing to `wired' mode (virtual interconnect)"
# rte mode
vmode wione
bird
setcap "Routing errors over last 24 hours"
dmode rte
pstick tl legend
panel +rt,pipe
pipemode rte
opt +pipes
orbit -x
opt -pipes
pipemode torus
panel -rt,pipe
pstick tr legend

# yod mode
setcap "Viewing yod allocations"
dmode yod
orbit +x

setcap "Changing to physical layout mode"
vmode phys
dmode temp
setcap "Zoom while viewing nodes in temperature range"
bird
selnode random
hl seldm
opt +skel
refocus
move forward 50
opt +nlabels
orbit x
opt -nlabels
clrsn
move back 50
bird
hl all
setcap "Cycle through all temperature ranges"
cyclenc
opt -skel
setcap "Changing to 'wired' mode"
vmode wione
bird
dmode job
setcap "Jobs in wired mode"
orbit -x
seljob random
setcap "Viewing one job in wired mode"
refocus
opt +skel,nlabels
move forward 50
orbit x
move back 50
opt -skel,nlabels

# subset (view yods of nodes allocated to a job)
setcap "Viewing yods allocated to this job"
subsel visible
clrsn
opt +subset
dmode yod
orbit +x
dmode job
opt -subset

hl all
refocus
setcap "Preparing to zoom inside the interconnect"
opt +pipes
panel +compass
winsp +10 +10 +10
selnode 2600
refocus
move forward 100
opt +nlabels
setcap "Focus on one node"
orbit x
move back 100
opt -nlabels
clrsn
setcap "Change node offset to show torus repetitions"
panel -compass
winsp -10 -10 -10
bird
panel +wiadj
wioff +8 +0 +0
wioff +0 +0 +8
orbit x
wioff -8 +0 +0
wioff +0 +0 -8
opt -pipes
panel -wiadj
seljob random
refocus
opt +skel
setcap "Viewing job between physical and wired modes"
vmode phys
bird
vmode wione
bird
clrsn
opt -skel
hl all

setcap "Changing to wired-repeat mode"
# VM_WIRED
panel +compass
vmode wired
opt +selpipes,nlabels
selnode 1230
refocus
move forward 100
orbit -x
move back 100
clrsn
opt -selpipes,nlabels
panel -compass
# selpipes

setcap "Going back to physical layout mode viewing jobs"
vmode phys
bird
setcap "Cycle through all node states/jobs"
opt +skel
cyclenc
opt -skel

# physpipes
setcap "Viewing pipes in physical mode"
selnode 0
refocus
move forward 50
opt +pipes
orbit +x
opt -pipes
clrsn
bird

setcap "Fetching latest node data...        "
refresh
setcap "Fetching latest node data... done"
