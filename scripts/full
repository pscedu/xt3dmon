# $Id$

# blade skels
# physpipes
# archive
# selpipes
# subset (view route errors of node in job)
# VM_WIRED

vmode phys
setcap "CPU temperatures in physical machine layout"
dmode temp
opt frames,tween,nodeanim,caption,ground
panel legend,help
# pstick bl legend
bird
orbit -x

setcap "Changing to `wired' mode (virtual interconnect)"
# rte mode
vmode wione
bird
setcap "Routing errors over last 24 hours"
dmode rte
pstick tl legend
panel +rt,pipe
pipemode rte
opt +pipes
orbit -x
opt -pipes
pipemode torus
panel -rt,pipe
pstick tr legend

# yod mode
setcap "Viewing yod allocations"
dmode yod
orbit +x

setcap "Changing to physical layout mode"
vmode phys
dmode temp
setcap "Zoom while viewing nodes in temperature range"
bird
selnode random
hl seldm
opt +skel
refocus
move forward 50
opt +nlabels
orbit x
opt -nlabels
clrsn
move back 50
bird
hl all
setcap "Cycle through all temperature ranges"
cyclenc
opt -skel
setcap "Changing to 'wired' mode"
vmode wione
bird
dmode job
setcap "Jobs in wired mode"
orbit -x
seljob random
setcap "Viewing one job in wired mode"
refocus
opt +skel,nlabels
move forward 50
orbit x
move back 50
opt -skel,nlabels
hl all
clrsn
refocus
setcap "Preparing to zoom inside the interconnect"
opt +pipes
panel +compass
winsp +10 +10 +10
selnode 2600
refocus
move forward 100
opt +nlabels
setcap "Focus on one node"
orbit x
move back 100
opt -nlabels
clrsn
setcap "Change node offset to show torus repetitions"
panel -compass
winsp -10 -10 -10
bird
panel +wiadj
wioff +8 +0 +0
wioff +0 +0 +8
orbit x
wioff -8 +0 +0
wioff +0 +0 -8
opt -pipes
panel -wiadj
seljob random
refocus
opt +skel
setcap "Viewing job between physical and wired modes"
vmode phys
bird
vmode wione
bird
clrsn
opt -skel
hl all
setcap "Going back to physical layout mode viewing jobs"
vmode phys
bird
setcap "Cycle through all node states/jobs"
opt +skel
cyclenc
opt -skel

setcap "Fetching latest node data...        "
refresh
setcap "Fetching latest node data... done"
